<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_bar_red"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/reset_password"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newPassEtOtpIn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:drawableTint="@color/progress_bar_red"
        android:fontFamily="@font/quicksand_semi_bold"
        android:hint="@string/new_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingHorizontal="12dp"
        android:paddingStart="18dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/light_black"
        android:textColorHint="@color/light_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInText"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/confirmPassEtSignIn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/ic_open_lock"
        android:drawablePadding="12dp"
        android:drawableTint="@color/progress_bar_red"
        android:fontFamily="@font/quicksand_semi_bold"
        android:hint="@string/confirm_password"
        android:importantForAutofill="no"
        android:inputType="textVisiblePassword"
        android:paddingHorizontal="12dp"
        android:paddingStart="18dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/light_black"
        android:textColorHint="@color/light_black"
        app:layout_constraintEnd_toEndOf="@id/newPassEtOtpIn"
        app:layout_constraintStart_toStartOf="@id/newPassEtOtpIn"
        app:layout_constraintTop_toBottomOf="@id/newPassEtOtpIn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetPassBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/quicksand_medium"
        android:paddingVertical="16dp"
        android:text="@string/reset"
        android:textColor="@color/progress_bar_red"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/confirmPassEtSignIn"
        app:layout_constraintStart_toStartOf="@id/confirmPassEtSignIn"
        app:layout_constraintTop_toBottomOf="@id/confirmPassEtSignIn"
        app:layout_constraintVertical_bias="0.05"
        app:shapeAppearanceOverlay="@style/EditTextBackground" />
</androidx.constraintlayout.widget.ConstraintLayout>