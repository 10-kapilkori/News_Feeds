<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">#B51111</item>
        <item name="colorOnPrimary">#403F3F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="EditTextBackground">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ButtonBackground">
        <item name="cornerSize">50%</item>
        <item name="colorPrimary">@color/white</item>
        <item name="background">@drawable/edit_text_bg</item>
    </style>

    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Collapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dim_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ToolbarSearch">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
